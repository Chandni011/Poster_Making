<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/button_bg"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starter"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/premium_bg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/pointer"
                    android:layout_marginTop="-2dp"/>

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Make your own posts."
                    android:textStyle="bold"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/pointer"
                    android:layout_marginTop="-2dp"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="Download unlimited posters."
                    android:textStyle="bold"
                    android:textSize="@dimen/_18sdp"
                    android:fontFamily="@font/poppins_medium"/>

            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center">

               <ImageView
                   android:layout_width="@dimen/_30sdp"
                   android:layout_height="@dimen/_30sdp"
                   android:src="@drawable/ic_rupee"/>

               <TextView
                   android:id="@+id/tvRs"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="99"
                   android:textStyle="bold"
                   android:textSize="@dimen/_30sdp"
                   android:fontFamily="@font/poppins_medium"/>

               <TextView
                   android:id="@+id/tvDuration"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=" 1 YEAR"
                   android:fontFamily="@font/poppins_medium"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/rightHand"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="@dimen/_80sdp"
                    app:lottie_rawRes="@raw/right_hand"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_subscription"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/button_bg"
                    android:text="Buy Subscription"
                    android:textColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/poppins_medium"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_20sdp" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lestHand"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="@dimen/_80sdp"
                    app:lottie_rawRes="@raw/left_hand"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>